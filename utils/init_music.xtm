;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;
;; wrapper around pc:random 
;;
;; Allows passing any list of pitches instead of a 0-11 pitch class list 
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
(define pc:ran
    (lambda (lower upper pitch-list)
        (pc:random lower upper 
            (map (lambda (x)
                    (modulo x 12))
                pitch-list)
            )))








